<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@id/listitem_drawer_layout"
    >

    <ImageView
        android:id="@id/icon"
        android:layout_width="@dimen/category_title_image_dimension"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/category_image_margin"
        android:layout_marginRight="@dimen/category_image_margin"
        android:src="@mipmap/ic_launcher"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@id/title"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/icon"
        android:minHeight="?android:attr/listPreferredItemHeightSmall"
        android:textAppearance="?android:attr/textAppearanceListItemSmall"
        android:textColor="@android:color/black"
        android:gravity="center_vertical"
        android:layout_centerVertical="true"
        android:textSize="@dimen/text_size_small"
        android:text="makeup"
        />



</RelativeLayout>